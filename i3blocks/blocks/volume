#!/usr/bin/env ruby

if ARGV[0] == "1"
  system("pavucontrol")
end

volume = `pamixer --get-volume`.tr(" \n", "").to_i
isMuted = `pamixer --get-mute`.include? "true"

if volume == 0 || isMuted
  icon = "ðŸ”‡"
elsif volume < 30
  icon = "ðŸ”ˆ"
elsif volume < 80
  icon = "ðŸ”‰"
else
  icon = "ðŸ”Š"
end

puts "#{icon} #{volume}%"