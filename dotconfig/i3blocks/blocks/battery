#!/usr/bin/env ruby

battery_path = "/sys/class/power_supply/BAT0"

isCharging = File.read("#{battery_path}/status").include? "Charging"
capacity = File.read("#{battery_path}/capacity").tr " \n", ""

if isCharging
  puts "âš¡ #{capacity}%"
else
  puts "ðŸ”‹ #{capacity}%"
  exit 33 if capacity.to_i < 10
end
